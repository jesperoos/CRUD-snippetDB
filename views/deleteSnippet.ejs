<!DOCTYPE html>
<html>
  <%- include('userHeader') -%>
  <body>
    <div style="float:left">
      <form action="/delete-snippet" method="POST">
          <h1>Delete snippet with name:</h1>
        <br>
        <input type="text" id="snippetname" name="snippetname" placeholder="Name of snippet to be deleted" style="width:200px" required><br><br>

        <input type="submit" value="Delete snippet">
      </form>
    </div>

    <div style="float: right">
      <h1>List of snippets</h1>
      
      <% if (snippets.length == 0) { %>
          <p></p>
      <% } else { %>
          <ul>
            <% for (let i = 0; i < snippets.length; i++) { %>
            <li><div><h2><%= JSON.parse(`${snippets[i].name}`) %></h2></div>
            <div class="snippetList"><%= JSON.parse(`${snippets[i].codeSnippet}`) %></div></li>
            <% } %>
          </ul>
      <% } %>
    </div>
</body>
<%- include('footer') -%>
</html>